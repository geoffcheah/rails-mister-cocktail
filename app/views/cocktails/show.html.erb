<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>Cocktail Ingredients</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
     <li><%= dose.ingredient.name %>, dose: <%= dose.description %>
     <%= link_to dose_path(dose), method: :delete  do %>
      <i class="fas fa-trash"></i>
      <% end %>
    </li>
     <% end %>
  </ul>
  <h4>Add Ingredients/Doses</h4>
    <%= simple_form_for [@cocktail,@dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
<% end %>
<%= link_to "Back to Cocktails list", cocktails_path %>
</div>
